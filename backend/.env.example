# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
# Option 1: Use MySQL URL (recommended for cloud databases)
# MYSQL_URL=mysql://user:password@host:port/database

# Option 2: Use individual variables (recommended for local development)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_password_here
DB_NAME=job_portal_db

# JWT Secret Key (change this in production!)
JWT_SECRET=your-secret-key-change-in-production-min-32-characters-long

# CORS Configuration
# Comma-separated list of allowed origins (e.g., http://localhost:5173,http://localhost:3000)
CLIENT_URL=http://localhost:5173,http://localhost:5175,http://localhost:3000

# Cloudinary Configuration (Optional - for file uploads)
# If not provided, files will be stored locally in the uploads/ directory
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
